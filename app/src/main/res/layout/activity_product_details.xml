<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lechuang.app.view.productdetails.ProductDetailsActivity"
    >
    <com.zheng.webmanger.view.CusWebView
        android:id="@+id/webview_product_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <include layout="@layout/layout_status_bar"/>

        <include layout="@layout/common_detail_title" />
    </LinearLayout>

</FrameLayout>
