<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:NavLayout="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/base_header"
        android:visibility="gone"/>

    <FrameLayout
        android:id="@+id/fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_line"/>

    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/c_line"
        android:layout_above="@+id/nav_tab_layout"
        android:layout_marginBottom="2dp"/>

    <com.lechuang.app.view.NavTabLayout
        android:id="@+id/nav_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        NavLayout:navTabCurrent="0"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
